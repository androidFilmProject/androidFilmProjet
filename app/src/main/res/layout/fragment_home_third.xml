<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app2="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto%22%3E">
    <data>
        <variable
            name="item"
            type="com.gmail.eamosse.idbdata.data.Movie" />
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.home.HomeThirdFragment">

        <TextView
            android:id="@+id/movie_description"
            android:layout_width="250dp"
            android:layout_height="150dp"
            android:layout_marginBottom="92dp"
            android:text="Name :@{item.name}"
            android:textSize="18dp"
            app2:layout_constraintBottom_toBottomOf="parent"
            app2:layout_constraintEnd_toEndOf="parent"
            app2:layout_constraintHorizontal_bias="0.496"
            app2:layout_constraintStart_toStartOf="parent"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/movie_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:padding="20dp"
            android:textSize="28dp"
            app2:layout_constraintBottom_toBottomOf="parent"
            app2:layout_constraintEnd_toEndOf="parent"
            app2:layout_constraintHorizontal_bias="0.528"
            app2:layout_constraintStart_toStartOf="parent"
            app2:layout_constraintTop_toTopOf="parent"
            app2:layout_constraintVertical_bias="0.081"
            app:layout_constraintTop_toBottomOf="@+id/movie_description"
            tools:ignore="MissingConstraints"
            tools:text="Name" />

        <ImageView
            android:id="@+id/movie_poster_path"
            android:layout_width="191dp"
            android:layout_height="170dp"
            android:layout_marginBottom="300dp"
            android:src="@drawable/ic_launcher_background"
            app2:layout_constraintBottom_toBottomOf="parent"
            app2:layout_constraintEnd_toEndOf="parent"
            app2:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/movie_name"
            tools:ignore="MissingConstraints" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>